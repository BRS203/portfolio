  <!-- SCRIPTS -->
  <script>
    // Matrix background
    const canvas = document.getElementById("binaryCanvas");
    const ctx = canvas.getContext("2d");
    function resizeCanvas(){ canvas.width = innerWidth; canvas.height = innerHeight; }
    addEventListener("resize", resizeCanvas); resizeCanvas();
    const bin="01"; const fontSize=14; let columns=canvas.width/fontSize;
    let drops=Array(Math.floor(columns)).fill(1);
    function draw(){
      ctx.fillStyle="rgba(0,0,0,0.06)";
      ctx.fillRect(0,0,canvas.width,canvas.height);
      ctx.fillStyle="#FFD700"; ctx.font=fontSize+"px monospace";
      for(let i=0;i<drops.length;i++){
        const t=bin[Math.floor(Math.random()*bin.length)];
        ctx.fillText(t,i*fontSize,drops[i]*fontSize);
        if(drops[i]*fontSize>canvas.height && Math.random()>0.975) drops[i]=0;
        drops[i]++;
      }
    }
    setInterval(draw,33);

    // Active nav link on scroll
    const links=[...document.querySelectorAll(".nav-link")];
    const ids=links.map(a=>document.querySelector(a.getAttribute("href")));
    const opt={root:null, rootMargin:"-50% 0px -40% 0px", threshold:0};
    const io=new IntersectionObserver((entries)=>{
      entries.forEach(e=>{
        const idx=ids.indexOf(e.target);
        if(idx>-1){
          if(e.isIntersecting){ links.forEach(l=>l.classList.remove("active")); links[idx].classList.add("active"); }
        }
      });
    },opt);
    ids.forEach(sec=>sec && io.observe(sec));

    // Year
    document.getElementById("year").textContent=new Date().getFullYear();
  </script>
